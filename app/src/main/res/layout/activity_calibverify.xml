<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asahoo264.ece496_cc.CalibVerification">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:weightSum="4">
        <TextView
            android:id="@+id/timer"
            android:text="Time: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:padding="12dp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/timer"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/left_electrode"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="LEFT"
            android:textSize="12sp"
            android:textAlignment="center"
            android:background="@drawable/horseshoe_bg"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lc_electrode"
            android:layout_weight="1"
            android:text="LEFT-CENTER"
            android:textSize="10sp"
            android:padding="10dp"
            android:background="@drawable/horseshoe_bg"
            android:textAlignment="center"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rc_electrode"
            android:layout_weight="1"
            android:text="RIGHT-CENTER"
            android:textSize="10sp"
            android:padding="10dp"
            android:background="@drawable/horseshoe_bg"
            android:textAlignment="center"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/right_electrode"
            android:layout_weight="1"
            android:text="RIGHT"
            android:textSize="12sp"
            android:padding="10dp"
            android:background="@drawable/horseshoe_bg"
            android:textAlignment="center"
            android:textStyle="bold"/>


    </LinearLayout>

    <TextView
        android:id="@+id/concentration"
        android:text="Concentration: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:padding="12dp"
        android:gravity="left"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/timer"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"/>
    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:id="@+id/frameLayout">


    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout">

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/imageSwitcher"
            android:layout_height="match_parent"
            android:layout_gravity ="top"
            android:background="@drawable/fixation"/>
    </LinearLayout>
</RelativeLayout>