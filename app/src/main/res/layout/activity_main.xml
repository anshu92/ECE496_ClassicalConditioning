<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asahoo264.ece496_cc.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dp"
        android:weightSum="2">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:padding="0dp"
    android:weightSum="2"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="0dp"
        android:weightSum="2"
        android:orientation="vertical">
    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="Connect to Muse"
        android:layout_weight="1"
        android:layout_marginRight="-8dp"
        android:layout_marginBottom="-8dp"
        android:layout_marginTop="-8dp"
        android:textSize="24sp"
        android:background="@color/colorgreen"
        android:textColor="@color/colorblue"
        android:id="@+id/connectbutton"
        style="?android:attr/borderlessButtonStyle" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Connect to Wristband"
            android:layout_weight="1"
            android:layout_marginRight="-8dp"
            android:layout_marginBottom="-8dp"
            android:layout_marginTop="-8dp"
            android:textSize="24sp"
            android:background="@color/colorblue"
            android:textColor="@color/colorgreen"
            android:id="@+id/connectbutton1"
            style="?android:attr/borderlessButtonStyle" />
    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight = "1"
        android:layout_marginRight="-8dp"
        android:layout_marginBottom="-8dp"
        android:layout_marginTop="-8dp"
        android:textSize="24sp"
        android:text="Calibration"
        android:background="@color/colorcyan"
        android:textColor="@color/colorblack"
        android:padding="0dp"
        android:id="@+id/calibbutton"
        style="?android:attr/borderlessButtonStyle" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="2"
        android:padding="0dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight = "1"
            android:layout_marginRight="-8dp"
            android:layout_marginBottom="-8dp"
            android:layout_marginTop="-8dp"
            android:background="@color/colorbluegreen"
            android:textColor="@color/colorblack"
            android:textSize="24sp"
            android:text="Plot"
            android:id="@+id/plotbutton"
            style="?android:attr/borderlessButtonStyle" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight = "1"
            android:layout_marginRight="-8dp"
            android:layout_marginBottom="-8dp"
            android:layout_marginTop="-8dp"
            android:text="Verification"
            android:textSize="24sp"
            android:background="@color/colorgreen"
            android:textColor="@color/colorblue"
            android:id="@+id/verifybutton"
            style="?android:attr/borderlessButtonStyle" />
    </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/logo"
        android:gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:alpha="0.1"
        android:layout_centerInParent="true"
        android:src="@drawable/muse"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/logo1"
        android:gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:alpha="0.15"
        android:layout_centerInParent="true"
        android:src="@drawable/clipart_watch"/>

</RelativeLayout>
