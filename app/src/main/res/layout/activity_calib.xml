<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asahoo264.ece496_cc.CalibActivity">

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/imageSwitcher"
        android:layout_height="match_parent"
        android:layout_gravity ="top"
        android:background="@drawable/fixation"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:weightSum="4">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/left_electrode"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="LEFT"
            android:textSize="12sp"
            android:textAlignment="center"
            android:background="@drawable/horseshoe_bg"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lc_electrode"
            android:layout_weight="1"
            android:text="LEFT-CENTER"
            android:textSize="10sp"
            android:padding="10dp"
            android:background="@drawable/horseshoe_bg"
            android:textAlignment="center"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rc_electrode"
            android:layout_weight="1"
            android:text="RIGHT-CENTER"
            android:textSize="10sp"
            android:padding="10dp"
            android:background="@drawable/horseshoe_bg"
            android:textAlignment="center"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/right_electrode"
            android:layout_weight="1"
            android:text="RIGHT"
            android:textSize="12sp"
            android:padding="10dp"
            android:background="@drawable/horseshoe_bg"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/timer"
            android:text="Time: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:padding="12dp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/timer"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>


    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:thumb="@drawable/apptheme_switch_inner_holo_light"
        android:track="@drawable/apptheme_switch_track_holo_light"
        android:textOn=""
        android:textOff=""
        android:textColor="#000000"
        android:textStyle="bold"
        android:id="@+id/switchbar" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:id="@+id/frameLayout">







    </FrameLayout>
    </RelativeLayout>